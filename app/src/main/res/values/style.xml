<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/RoundShapeOverlay</item>
    </style>

    <style name="RoundShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedBottomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>

    <style name="TimeSlotButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#E0E0E0</item>
    </style>

    <style name="CalendarDayStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDateStyle">
        <item name="android:textColor">#0D55B3</item>
    </style>

    <!-- Add this service button style to your styles.xml file -->
    <style name="ServiceButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">#7A7A7A</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>

